{
    "name": "@hiro-graph/client",
    "repository": "arago/hiro-graph-js",
    "version": "1.0.23",
    "types": "index.d.ts",
    "description": "Javascript client for HIRO Graph REST API. Works in both node and browser.",
    "main": "lib/index.js",
    "scripts": {
        "build": "rm -rf lib/* && BABEL_ENV=production babel src --out-dir lib --source-maps",
        "preversion": "yarn test && yarn build",
        "postversion": "git add -A . && git push && git push --tags",
        "test": "jest --silent"
    },
    "license": "MIT",
    "dependencies": {
        "@arago/eslint-config-arago": "github:arago/eslint-config-arago",
        "@types/node-fetch": "*",
        "@types/websocket": "*",
        "eslint": "^5.3.0",
        "husky": "^1.1.2",
        "isomorphic-fetch": "^2.2.1",
        "lerna": "^3.0.6",
        "websocket": "^1.0.25"
    },
    "devDependencies": {
        "babel-cli": "^6.6.5",
        "babel-jest": "^23.4.2",
        "babel-preset-hiro": "^0.4.0",
        "jest": "^23.5.0"
    },
    "babel": {
        "presets": [
            [
                "hiro",
                {
                    "library": true
                }
            ]
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>[/\\\\](lib|node_modules)[/\\\\]"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
        }
    }
}
