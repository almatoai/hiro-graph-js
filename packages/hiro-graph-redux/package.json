{
    "name": "@hiro-graph/redux",
    "version": "1.1.12",
    "repository": "arago/hiro-graph-js",
    "description": "Redux awareness for the `@hiro-graph/orm` package",
    "main": "lib/index.js",
    "types": "index.d.ts",
    "scripts": {
        "build": "rm -rf lib/* && BABEL_ENV=production babel src --out-dir lib --source-maps",
        "preversion": "yarn test && yarn build",
        "postversion": "git add -A . && git push && git push --tags",
        "test": "jest --silent"
    },
    "license": "MIT",
    "dependencies": {
        "@arago/eslint-config-arago": "github:arago/eslint-config-arago",
        "@hiro-graph/client": "^1.0.24",
        "@hiro-graph/implicit-oauth": "^1.1.2",
        "@hiro-graph/orm": "^1.0.35",
        "eslint": "^5.3.0",
        "lerna": "^3.0.6",
        "lodash.isplainobject": "^4.0.6",
        "redux": "^4.0.0",
        "reselect": "^4.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.6.5",
        "babel-jest": "^23.4.2",
        "babel-preset-hiro": "^0.4.0",
        "jest": "^23.5.0"
    },
    "babel": {
        "presets": [
            [
                "hiro",
                {
                    "library": true
                }
            ]
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>[/\\\\](lib|node_modules)[/\\\\]"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
        }
    }
}
