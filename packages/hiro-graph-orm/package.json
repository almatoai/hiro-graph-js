{
    "name": "@hiro-graph/orm",
    "version": "7.3.10",
    "description": "OGIT ontology to sane application mappings",
    "repository": "arago/hiro-graph-js",
    "main": "lib/index.js",
    "types": "index.d.ts",
    "scripts": {
        "build": "rm -rf lib/* && BABEL_ENV=production babel src --out-dir lib --source-maps",
        "prepublish": "yarn test && yarn build",
        "test": "jest --silent",
        "test:ci": "jest --silent --ci --reporters=default --reporters=jest-junit"
    },
    "license": "MIT",
    "dependencies": {
        "@babel/runtime": "^7.8.7",
        "@hiro-graph/client": "^7.3.10",
        "js-yaml": "^3.13.1",
        "lodash.isplainobject": "^4.0.6"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-transform-regenerator": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/plugin-transform-spread": "^7.8.3",
        "@babel/preset-env": "^7.8.4",
        "babel-jest": "^25.1.0",
        "jest": "^25.1.0"
    },
    "browserslist": [
        "chrome >= 64",
        "ie 11",
        "edge >= 15"
    ],
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": "commonjs"
                }
            ]
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-transform-regenerator",
            "@babel/plugin-transform-runtime"
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>[/\\\\](lib|node_modules)[/\\\\]"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
        }
    },
    "jest-junit": {
        "suiteName": "@hiro-graph/orm",
        "outputDirectory": "../../reports",
        "outputName": "hiro-graph-orm.xml"
    },
    "publishConfig": {
        "access": "public"
    }
}
